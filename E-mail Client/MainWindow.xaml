<Window x:Class="E_mail_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_mail_Client"
        mc:Ignorable="d"
        Title="E-mail Client" Height="450" Width="800">
    <Grid Background="#FF376DCB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:Name="TopGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Background="Gray" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Menu x:Name="MainMenu" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Gray" BorderThickness="2" FontSize="16" Margin="10,10,10,10" Foreground="White">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <MenuItem Header="File" Margin="10,0,0,0" FontWeight="Bold" Background="Gray">
                    <MenuItem Header="New Message" Background="Gray">

                    </MenuItem>
                    <MenuItem Header="Exit" Background="Gray" Click="ExitMenuItem_Click">

                    </MenuItem>
                </MenuItem>
            </Menu>

            <ToolBar Grid.Column="1" VerticalAlignment="Top" Margin="10,5,10,5" HorizontalAlignment="Center" Background="#FF376DCB">
                <Button Width="85" Height="35" HorizontalAlignment="Left" Background="#FF376DCB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="delete.png" ></Image>
                        <Label FontSize="12" Foreground="White">Delete</Label>
                    </StackPanel>
                </Button>
                <Button Width="85" Height="35" HorizontalAlignment="Left" Background="#FF376DCB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="mail.png" ></Image>
                        <Label FontSize="12" Foreground="White">Reply</Label>
                    </StackPanel>
                </Button>
                <Button Width="85" Height="35" HorizontalAlignment="Left" Background="#FF376DCB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="mail.png"></Image>
                        <Label FontSize="12" Foreground="White">Reply all</Label>
                    </StackPanel>
                </Button>
                <Button Width="85" Height="35" HorizontalAlignment="Left" Background="#FF376DCB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="mail.png"></Image>
                        <Label FontSize="12" Foreground="White">Forward</Label>
                    </StackPanel>
                </Button>
                <Button Width="85" Height="35" HorizontalAlignment="Left" Background="#FF376DCB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="star.png"></Image>
                        <Label FontSize="12" Foreground="White">Star</Label>
                    </StackPanel>
                </Button>
            </ToolBar>

            <TextBox x:Name="SearchTextBox" Grid.Column="2" HorizontalAlignment="Stretch" Margin="5,15,15,15" TextBlock.FontStyle="Normal">
                Search
            </TextBox>
        </Grid>
        <TreeView x:Name="EmailTreeView" Grid.Column="0" Grid.Row="1" Margin="10,15,10,5" Background="Gray" Foreground="White">
            <TreeViewItem Header="test@gmail.com" Foreground="White" MouseDoubleClick="Email1TreeViewItem_MouseDoubleClick">
                <TreeViewItem Header="Inbox" Foreground="White" MouseDoubleClick="Inbox1TreeViewItem_MouseDoubleClick"></TreeViewItem>
                <TreeViewItem Header="Sent items" Foreground="White" MouseDoubleClick="Sent1TreeViewItem_MouseDoubleClick"></TreeViewItem>
                <TreeViewItem Header="Deleted items" Foreground="White" MouseDoubleClick="Deleted1TreeViewItem_MouseDoubleClick"></TreeViewItem>
                <TreeViewItem Header="Starred" Foreground="White" MouseDoubleClick="Starred1TreeViewItem_MouseDoubleClick"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="email@coyg.com" Foreground="White" MouseDoubleClick="Email2TreeViewItem_MouseDoubleClick">
                    <TreeViewItem Header="Inbox" Foreground="White" MouseDoubleClick="Inbox2TreeViewItem_MouseDoubleClick"></TreeViewItem>
                    <TreeViewItem Header="Sent items" Foreground="White" MouseDoubleClick="Sent2TreeViewItem_MouseDoubleClick"></TreeViewItem>
                    <TreeViewItem Header="Deleted items" Foreground="White" MouseDoubleClick="Deleted2TreeViewItem_MouseDoubleClick"></TreeViewItem>
                    <TreeViewItem Header="Starred" Foreground="White" MouseDoubleClick="Starred2TreeViewItem_MouseDoubleClick"></TreeViewItem>
                </TreeViewItem>
        </TreeView>

            <ListView x:Name="MessagesListView" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="Auto" Margin="10,10,10,10"  Background="Gray" Foreground="White">
                <ListViewItem>Message 1</ListViewItem>
                <ListViewItem>Message 2</ListViewItem>
                <ListViewItem>Message 3</ListViewItem>
                <ListViewItem>Message 4</ListViewItem>
                <ListViewItem>Message 5</ListViewItem>
                <ListViewItem>Message 6</ListViewItem>
                <ListViewItem>Message 7</ListViewItem>
                <ListViewItem>Message 8</ListViewItem>
                <ListViewItem>Message 9</ListViewItem>
                <ListViewItem>Message 10</ListViewItem>
                <ListViewItem>Message 11</ListViewItem>
                <ListViewItem>Message 12</ListViewItem>
                <ListViewItem>Message 13</ListViewItem>
                <ListViewItem>Message 14</ListViewItem>
                <ListViewItem>Message 15</ListViewItem>
                <ListViewItem>Message 16</ListViewItem>
                <ListViewItem>Message 17</ListViewItem>
                <ListViewItem>Message 18</ListViewItem>
                <ListViewItem>Message 19</ListViewItem>
                <ListViewItem>Message 20</ListViewItem>
            </ListView>
            
            <TextBlock x:Name="MessageTextBlock" Text="Message Text" Background="DimGray" Foreground="White" HorizontalAlignment="Stretch" Margin="10,15,15,15" Height="auto" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"></TextBlock>
    </Grid>
</Window>
