<Window x:Class="E_mail_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_mail_Client"
        mc:Ignorable="d"
        Title="E-mail Client" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TreeView VerticalAlignment="Top" HorizontalAlignment="Left" Width="230" Margin="10,60,0,0">
                <TreeViewItem Header="test@gmail.com">
                    <TreeViewItem Header="Inbox"></TreeViewItem>
                    <TreeViewItem Header="Sent items"></TreeViewItem>
                    <TreeViewItem Header="Deleted items"></TreeViewItem>
                    <TreeViewItem Header="Starred"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="email@coyg.com">
                    <TreeViewItem Header="Inbox"></TreeViewItem>
                    <TreeViewItem Header="Sent items"></TreeViewItem>
                    <TreeViewItem Header="Deleted items"></TreeViewItem>
                    <TreeViewItem Header="Starred"></TreeViewItem>
                </TreeViewItem>
            </TreeView>

            <ListView HorizontalAlignment="Left" Width="230" Margin="10,5,10,10" Background="WhiteSmoke">
                <ListViewItem>Message 1</ListViewItem>
                <ListViewItem>Message 2</ListViewItem>
                <ListViewItem>Message 3</ListViewItem>
                <ListViewItem>Message 4</ListViewItem>
        </ListView>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Grid x:Name="TopGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Background="WhiteSmoke">
                <Menu x:Name="MainMenu" HorizontalAlignment="Left" VerticalAlignment="Top" Background="WhiteSmoke" BorderThickness="2" FontSize="16" Margin="10,10,0,0">

                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>

                    <MenuItem Header="File" Margin="10,0,0,0" FontWeight="Bold">
                        <MenuItem Header="New Message">

                        </MenuItem>
                        <MenuItem Header="Exit">

                        </MenuItem>
                    </MenuItem>
                </Menu>

                <ToolBar VerticalAlignment="Top" Margin="100,5,230,5" HorizontalAlignment="Center">
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="delete.png" ></Image>
                            <Label FontSize="12">Delete</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12">Reply</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12">Reply all</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12">Forward</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="star.png"></Image>
                            <Label FontSize="12">Star</Label>
                        </StackPanel>
                    </Button>
                </ToolBar>

                <TextBox x:Name="SearchTextBox" HorizontalAlignment="Right" Width="200" Margin="100,15,20,15" TextBlock.FontStyle="Normal">
                    Search
                </TextBox>
            </Grid>
        </StackPanel>
        <TextBlock Background="LightGray" HorizontalAlignment="Stretch" Margin="250,60,10,10" Height="auto"></TextBlock>
    </Grid>
</Window>
