<Window x:Class="E_mail_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_mail_Client"
        mc:Ignorable="d"
        Title="E-mail Client" Height="450" Width="800">
    <Grid Background="#FF376DCB">
        <StackPanel Orientation="Vertical">
            <Grid x:Name="TopGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Background="Gray">
                <Menu x:Name="MainMenu" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Gray" BorderThickness="2" FontSize="16" Margin="10,10,0,0" Foreground="White">

                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>

                    <MenuItem Header="File" Margin="10,0,0,0" FontWeight="Bold" Background="Gray">
                        <MenuItem Header="New Message" Background="Gray">

                        </MenuItem>
                        <MenuItem Header="Exit" Background="Gray">

                        </MenuItem>
                    </MenuItem>
                </Menu>

                <ToolBar VerticalAlignment="Top" Margin="100,5,230,5" HorizontalAlignment="Center" Background="#FF376DCB">
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="delete.png" ></Image>
                            <Label FontSize="12" Foreground="White">Delete</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12" Foreground="White">Reply</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12" Foreground="White">Reply all</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="mail.png" ></Image>
                            <Label FontSize="12" Foreground="White">Forward</Label>
                        </StackPanel>
                    </Button>
                    <Button Width="85" Height="35" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="star.png"></Image>
                            <Label FontSize="12" Foreground="White">Star</Label>
                        </StackPanel>
                    </Button>
                </ToolBar>

                <TextBox x:Name="SearchTextBox" HorizontalAlignment="Right" Width="200" Margin="100,15,20,15" TextBlock.FontStyle="Normal">
                    Search
                </TextBox>
            </Grid>
        </StackPanel>
        <StackPanel>
            <TreeView VerticalAlignment="Top" HorizontalAlignment="Left" Width="230" Margin="10,65,10,5" Background="Gray" Foreground="White">
                <TreeViewItem Header="test@gmail.com" Foreground="White">
                    <TreeViewItem Header="Inbox" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Sent items" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Deleted items" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Starred" Foreground="White"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="email@coyg.com" Foreground="White">
                    <TreeViewItem Header="Inbox" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Sent items" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Deleted items" Foreground="White"></TreeViewItem>
                    <TreeViewItem Header="Starred" Foreground="White"></TreeViewItem>
                </TreeViewItem>
            </TreeView>

            <ListView HorizontalAlignment="Left" Width="230" Margin="10,5,10,10" Background="Gray" Foreground="White">
                <ListViewItem>Message 1</ListViewItem>
                <ListViewItem>Message 2</ListViewItem>
                <ListViewItem>Message 3</ListViewItem>
                <ListViewItem>Message 4</ListViewItem>
            </ListView>
        </StackPanel>
        
        <TextBlock Background="DimGray" HorizontalAlignment="Stretch" Margin="255,65,10,15" Height="auto"></TextBlock>
    </Grid>
</Window>
