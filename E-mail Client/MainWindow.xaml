<Window x:Class="E_mail_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_mail_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ListView Height="Auto" Margin="100,50,20,20" Background="LightGray">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Vertical">
            <Grid x:Name="TopGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Background="WhiteSmoke">
                <Menu x:Name="MainMenu" HorizontalAlignment="Left" VerticalAlignment="Top" Background="WhiteSmoke" BorderThickness="2" FontSize="16" Margin="10,10,0,0">

                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>
               
                    <MenuItem Header="Compose" Margin="10,0,0,0" FontWeight="Bold"></MenuItem>
                    <MenuItem Header="Delete" Margin="50,0,0,0"></MenuItem>
                    <MenuItem Header="Reply" Margin="50,0,0,0"></MenuItem>
                    <MenuItem Header="Send forward" Margin="10,0,0,0"></MenuItem>
                    <MenuItem Header="Star" Margin="10,0,0,0"></MenuItem>


                </Menu>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
