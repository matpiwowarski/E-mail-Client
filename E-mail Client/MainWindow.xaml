<Window x:Class="E_mail_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_mail_Client"
        mc:Ignorable="d"
        Title="E-mail Client" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TreeView VerticalAlignment="Top" HorizontalAlignment="Left" Width="230" Margin="10,60,0,0">
                <TreeViewItem Header="test@gmail.com">
                    <TreeViewItem Header="Inbox"></TreeViewItem>
                    <TreeViewItem Header="Sent items"></TreeViewItem>
                    <TreeViewItem Header="Deleted items"></TreeViewItem>
                    <TreeViewItem Header="Starred"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="email@coyg.com">
                    <TreeViewItem Header="Inbox"></TreeViewItem>
                    <TreeViewItem Header="Sent items"></TreeViewItem>
                    <TreeViewItem Header="Deleted items"></TreeViewItem>
                    <TreeViewItem Header="Starred"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
            
        <ListView Height="Auto" HorizontalAlignment="Left" Width="230" Margin="10,5,10,10" Background="WhiteSmoke">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Grid x:Name="TopGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="50" Background="WhiteSmoke">
                <Menu x:Name="MainMenu" HorizontalAlignment="Left" VerticalAlignment="Top" Background="WhiteSmoke" BorderThickness="2" FontSize="16" Margin="10,10,0,0">

                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>

                    <MenuItem Header="File" Margin="10,0,0,0" FontWeight="Bold">
                        <MenuItem Header="New Message">

                        </MenuItem>
                        <MenuItem Header="Exit">

                        </MenuItem>
                    </MenuItem>
                </Menu>

                <ToolBar VerticalAlignment="Top" Margin="100,10,250,10">
                    <Button Content="Delete" Margin="50,0,0,0">

                    </Button>
                    <Button Content="Reply" Margin="50,0,0,0">

                    </Button>
                    <Button Content="Reply to all" Margin="10,0,0,0">

                    </Button>
                    <Button Content="Forward" Margin="10,0,0,0">

                    </Button>
                    <Button Content="Star" Margin="10,0,0,0">

                    </Button>
                </ToolBar>

                <TextBox x:Name="SearchTextBox" HorizontalAlignment="Right" Width="200" Margin="20,15,20,15" TextBlock.FontStyle="Normal">
                    Search
                </TextBox>
            </Grid>
        </StackPanel>
        <TextBlock Background="LightGray" HorizontalAlignment="Right" Width="550" Margin="250,60,10,10" Height="auto"></TextBlock>
    </Grid>
</Window>
